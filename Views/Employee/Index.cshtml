@model IEnumerable<EntityFrameWork.Models.Employee>
<div class="shadow p-3 mb-5 bg-white rounded">
<div class="row">
    <h5 class="col-2 text-center">ID</h5>
    <h5 class="col-2 text-center">Name</h5>
    <h5 class="col-2 text-center">Age</h5>
    <h5 class="col-2 text-center">Section</h5>
    <h5 class="col-2 text-center">Action</h5>
</div>
<hr/>

<div class=" border-left border-right border-dark">
@foreach(var i in Model)

{
   <div class="row">
        <p class="col-2 text-center">@i.id</p>
        <p class="col-2 text-center">@i.Name</p>
        <p class="col-2 text-center">@i.Age</p>
        <p class="col-2 text-center">@i.Gender</p>
         <div class="col-2 d-flex justify-content-center gap-3">
                    <form asp-action="Del" method="post">
                        <input type="hidden" name="id" value="@i.id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    @* <a asp-action="Del" asp-route-id="@i.id" class="btn btn-danger">Delete</a> *@
                    <a asp-action="Edit" asp-route-id="@i.id" class="btn btn-danger">Edit</a>
                    
         </div>
   </div>

    
}
</div>
</div>